<UserControl x:Class="SpaceResidentClient.Views.MainMenu.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignHeight="720" d:DesignWidth="1280">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SpaceResidentClient;component/ResourceDictionaries/Brushes.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/SpaceResidentClient;component/ResourceDictionaries/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource BGGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>

        <!--#region Header-->
        <!--Header label-->
        <Border
            Style="{StaticResource brdBase}"
            Grid.Column="2"
            Grid.Row="1"/>
        <Viewbox
            Margin="50,0,50,0"
            Grid.Column="2"
            Grid.Row="1">
            <TextBlock
                    Text="Space Resident"
                    Foreground="#fff">
            </TextBlock>
        </Viewbox>

        <Viewbox
            Margin="60"
            Grid.Row="1"
            Grid.Column="3">
            <TextBlock
                Text="00:00:00 00/00/0000"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock.Foreground>
                    <SolidColorBrush Color="{StaticResource ActiveColor}"/>
                </TextBlock.Foreground>
            </TextBlock>
        </Viewbox>
        
        <!--#endregion-->

        <!--#region Menu-->
        <Grid
            Grid.Column="1"
            Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>

            <Border
                Style="{StaticResource brdBase}"
                Grid.Row="1"
                Grid.RowSpan="5"/>
            
            <!--Buttons-->
            <Button
                Content="New Game"
                Grid.Row="1"
                Style="{StaticResource btnBase}"
                MouseEnter="Button_MouseEnter"/>
            <Button
                Content="Continue"
                Grid.Row="2"
                Style="{StaticResource btnBase}"
                MouseEnter="Button_MouseEnter"/>
            <Button
                Content="Load"
                Grid.Row="3"
                Style="{StaticResource btnBase}"
                MouseEnter="Button_MouseEnter"/>
            <Button
                Content="Settings"
                Grid.Row="4"
                Style="{StaticResource btnBase}"
                MouseEnter="Button_MouseEnter"/>
            <Button
                Content="Exit"
                Grid.Row="5"
                Style="{StaticResource btnCancelBase}"
                MouseEnter="Button_MouseEnter"/>
        </Grid>
        <!--#endregion-->
    </Grid>
</UserControl>