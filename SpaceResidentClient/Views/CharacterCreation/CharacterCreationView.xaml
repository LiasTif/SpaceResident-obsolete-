        <!--#endregion-->

        <!--#region bottom buttons-->
        <UniformGrid
            Grid.Row="3"
            Grid.Column="2"
            Columns="2"
            Margin="5">
            <Button
                MouseEnter="Button_MouseEnter"
                Command="{Binding CloseCommand}"
                Content="{x:Static language:Lang.cancel}"
                Style="{StaticResource btnCancelBase}">
                <Button.Height>
                    <MultiBinding Converter="{StaticResource SizeFromSizePercentageConventer}">
                        <Binding
                                Path="ActualHeight"
                                ElementName="btnMenuMinus"/>
                        <Binding Source="120"/>
                    </MultiBinding>
                </Button.Height>
                <Button.Width>
                    <MultiBinding Converter="{StaticResource SizeFromSizePercentageConventer}">
                        <Binding
                            Path="ActualHeight"
                            ElementName="btnMenuMinus"/>
                        <Binding Source="400"/>
                    </MultiBinding>
                </Button.Width>
            </Button>
            <Button
                IsEnabled="False"
                MouseEnter="Button_MouseEnter"
                Content="{x:Static language:Lang._continue}"
                Style="{StaticResource btnBase}">
                <Button.Height>
                    <MultiBinding Converter="{StaticResource SizeFromSizePercentageConventer}">
                        <Binding
                            Path="ActualHeight"
                            ElementName="btnMenuMinus"/>
                        <Binding Source="120"/>
                    </MultiBinding>
                </Button.Height>
                <Button.Width>
                    <MultiBinding Converter="{StaticResource SizeFromSizePercentageConventer}">
